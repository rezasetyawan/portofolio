---
import HackathonCard from "@/components/astro/hackathon-card.astro";
import ProjectCard from "@/components/astro/project-card.astro";
import ResumeCard from "@/components/astro/resume-card.astro";
import BlurFade from "@/components/magicui/blur-fade";
import BlurFadeText from "@/components/magicui/blur-fade-text";
import { Badge } from "@/components/ui/badge";
import { DATA } from "@/data/resume";
import Layout from "@/layouts/layout.astro";
import { marked } from "marked";

const BLUR_FADE_DELAY = 0.04;
---

<Layout title="Reza Setyawan">
  <main class="flex flex-col min-h-[100dvh] space-y-10">
    <!-- Hero -->
    <section id="hero">
      <div class="mx-auto w-full max-w-2xl space-y-8">
        <div class="gap-2 flex justify-between">
          <div class="flex-col flex flex-1 space-y-1.5">
            <BlurFadeText
              client:load
              delay={BLUR_FADE_DELAY}
              className="text-3xl font-bold tracking-tighter sm:text-5xl xl:text-6xl/none"
              yOffset={8}
              text={`Hi, I'm ${DATA.name.split(" ")[0]} ðŸ‘‹`}
            />
            <BlurFadeText
              client:load
              className="max-w-[600px] md:text-xl"
              delay={BLUR_FADE_DELAY}
              text={DATA.description}
            />
          </div>
          <!-- <BlurFade client:load delay={BLUR_FADE_DELAY}>
          <Avatar className="size-28 border">
            <AvatarImage alt={DATA.name} src={DATA.avatarUrl} />
            <AvatarFallback>{DATA.initials}</AvatarFallback>
          </Avatar>
        </BlurFade> -->
        </div>
      </div>
    </section>

    <!-- About -->
    <section id="about">
      <BlurFade client:load delay={BLUR_FADE_DELAY * 3}>
        <h2 class="text-xl font-bold">About</h2>
      </BlurFade>
      <BlurFade client:load delay={BLUR_FADE_DELAY * 4}>
        <div
          class="prose max-w-full text-pretty font-sans text-sm text-muted-foreground dark:prose-invert"
          set:html={marked(DATA.summary)}
        />
      </BlurFade>
    </section>

    <!-- Work -->
    <section id="work">
      <div class="flex min-h-0 flex-col gap-y-3">
        <BlurFade client:load delay={BLUR_FADE_DELAY * 5}>
          <h2 class="text-xl font-bold">Experience</h2>
        </BlurFade>

        <BlurFade client:load delay={BLUR_FADE_DELAY * 14}>
          <ul class="mb-4 ml-4 divide-y divide-dashed border-l">
            {
              DATA.work.map((work, id) => (
                <BlurFade
                  client:load
                  delay={BLUR_FADE_DELAY * 15 + id * 0.05}
                  className={
                    id !== DATA.work.length - 1 ? "border-b border-dashed" : ""
                  }
                >
                  <HackathonCard
                    title={work.title}
                    description={work.description}
                    location={work.company}
                    dates={`${work.start} - ${work.end ?? "Present"}`}
                    image={work.logoUrl}
                  />
                </BlurFade>
              ))
            }
          </ul>
        </BlurFade>
      </div>
    </section>

    <!-- Education -->
    <section id="education">
      <div class="flex min-h-0 flex-col gap-y-3">
        <BlurFade client:load delay={BLUR_FADE_DELAY * 7}>
          <h2 class="text-xl font-bold">Education</h2>
        </BlurFade>
        {
          DATA.education.map((education, id) => (
            <BlurFade client:load delay={BLUR_FADE_DELAY * 8 + id * 0.05}>
              <ResumeCard
                href={education.href}
                logoUrl={education.logoUrl}
                altText={education.school}
                title={education.school}
                subtitle={education.degree}
                period={`${education.start} - ${education.end}`}
              />
            </BlurFade>
          ))
        }
      </div>
    </section>

    <!-- Skills -->
    <section id="skills">
      <div class="flex min-h-0 flex-col gap-y-3">
        <BlurFade client:load delay={BLUR_FADE_DELAY * 9}>
          <h2 class="text-xl font-bold">Skills</h2>
        </BlurFade>
        <div class="flex flex-wrap gap-1">
          {
            DATA.skills.map((skill, id) => (
              <BlurFade client:load delay={BLUR_FADE_DELAY * 10 + id * 0.05}>
                <Badge>{skill}</Badge>
              </BlurFade>
            ))
          }
        </div>
      </div>
    </section>

    <!-- Projects -->
    <section id="projects">
      <div class="space-y-12 w-full py-12">
        <BlurFade client:load delay={BLUR_FADE_DELAY * 11}>
          <div
            class="flex flex-col items-center justify-center space-y-4 text-center"
          >
            <div class="space-y-2">
              <div
                class="inline-block rounded-lg bg-foreground text-background px-3 py-1 text-sm"
              >
                My Projects
              </div>
              <h2 class="text-3xl font-bold tracking-tighter sm:text-5xl">
                Check out my latest work
              </h2>
            </div>
          </div>
        </BlurFade>
        <div
          class="grid grid-cols-1 gap-3 sm:grid-cols-2 max-w-[800px] mx-auto mt-10"
        >
          {
            DATA.projects.map((project, id) => (
              <BlurFade client:load delay={BLUR_FADE_DELAY * 12 + id * 0.05}>
                <ProjectCard
                  href={project.href}
                  title={project.title}
                  description={project.description}
                  dates={project.dates}
                  tags={project.technologies}
                  image={project.image}
                  video={project.video}
                  links={project.links}
                />
              </BlurFade>
            ))
          }
        </div>
      </div>
    </section>

    <!-- Contact -->
    <section id="contact">
      <div
        class="grid items-center justify-center gap-4 px-4 text-center md:px-6 w-full py-12"
      >
        <BlurFade client:load delay={BLUR_FADE_DELAY * 16}>
          <div class="space-y-3">
            <div
              class="inline-block rounded-lg bg-foreground text-background px-3 py-1 text-sm"
            >
              Contact
            </div>
            <h2 class="text-3xl font-bold tracking-tighter sm:text-5xl">
              Get in Touch
            </h2>
            <p
              class="mx-auto max-w-[600px] text-muted-foreground md:text-xl/relaxed lg:text-base/relaxed xl:text-xl/relaxed"
            >
              Want to chat? Just shoot me a dm{" "}
              <a
                href={DATA.contact.social.LinkedIn.url}
                class="text-blue-500 hover:underline"
              >
                with a direct question on LinkedIn
              </a>{" "}
              and I&apos;ll respond whenever I can.
            </p>
          </div>
        </BlurFade>
      </div>
    </section>
  </main>
</Layout>
