---
const { title, description } = Astro.props;
import Navbar from "@/components/navbar";
import { TooltipProvider } from "@/components/ui/tooltip";
import { cn } from "@/lib/utils";
import "../styles/global.css";
import { DATA } from "@/data/resume";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{DATA.name}</title>

    <!-- Basic meta -->
    <meta name="description" content={description || DATA.description} />

    <!-- Open Graph / Facebook -->
    <meta property="og:title" content={title || DATA.name} />
    <meta property="og:description" content={description || DATA.description} />
    <meta property="og:url" content={DATA.url} />
    <meta property="og:site_name" content={DATA.name} />
    <meta property="og:locale" content="en_US" />
    <meta property="og:type" content="website" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title || DATA.name} />
    <meta
      name="twitter:description"
      content={description || DATA.description}
    />

    <!-- Robots -->
    <meta name="robots" content="index, follow" />
    <meta
      name="googlebot"
      content="index, follow, max-video-preview:-1, max-image-preview:large, max-snippet:-1"
    />

    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />


    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <div
      class={cn(
        "min-h-screen bg-background font-sans antialiased max-w-[50rem] mx-auto py-12 sm:py-24 px-6"
      )}
    >
      <slot />
      <TooltipProvider client:load delayDuration={0}>
        <Navbar client:load />
      </TooltipProvider>
    </div>
  </body>
</html>
